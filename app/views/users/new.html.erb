<h1>New User</h1>

<%= form_for @user do |f| %>
  
  <% if @user.errors.any? %>
    <h2> Form is invalid </h2>
    <% for message in @user.errors.full_messages %>
      <h3> <%= message %> </h3>
    <% end %>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

    <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>